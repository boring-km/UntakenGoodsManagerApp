<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2A2"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".CreateQRActivity">

    <ImageView
            android:id="@+id/qrcode_ImageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/qr_code_title"
            app:layout_constraintHorizontal_bias="0.684"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp" android:layout_marginTop="94dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="QR코드 생성"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="63dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="40sp" android:textAlignment="center"
            android:textColor="#000000"/>
    <Button
            android:text="닫 기"
            android:layout_width="200dp"
            android:layout_height="80dp" android:id="@+id/CloseButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/qrcode_ImageView" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:textSize="30sp" android:background="#DBDDDD"
            android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>